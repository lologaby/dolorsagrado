---
const year = new Date().getFullYear();

const links = {
  services: [
    { href: '/tattoos',   label: 'Tattoos' },
    { href: '/piercings', label: 'Piercings' },
    { href: '/laser',     label: 'Remoción Laser' },
    { href: '/reservar',  label: 'Reservar cita' },
  ],
  info: [
    { href: '/pagosaplazos',     label: 'Pagos a plazos' },
    { href: '/contacto',         label: 'Contacto / Cómo llegar' },
  ],
  artists: [
    { href: '/davidreyes', label: 'David Reyes' },
    { href: '/aryatari',   label: 'Ari Reyes' },
    { href: '/joshua',     label: 'Joshua Reyes' },
    { href: '/brignoni',   label: 'Armando Brignoni' },
  ],
};
---

<footer class="footer">
  <div class="container">
    <!-- top grid -->
    <div class="footer-grid">
      <!-- brand col -->
      <div class="footer-brand">
        <a class="footer-logo" href="/">
          <img
            src="/images/logo.png"
            alt="Sacred Pain Tattoo"
            width="56" height="56"
          />
          <span class="footer-logo-name">Sacred Pain<br/>Tattoo</span>
        </a>
        <p class="footer-tagline">
          El mejor estudio de tatuajes y perforaciones en San Juan, Puerto Rico.
          Artistas premiados · Ambiente seguro y certificado.
        </p>
        <div class="footer-socials">
          <a href="https://www.instagram.com/sacredpain" target="_blank" rel="noreferrer" aria-label="Instagram">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="4.5"/><circle cx="17.5" cy="6.5" r="1" fill="currentColor" stroke="none"/></svg>
          </a>
          <a href="https://www.facebook.com/sacred.pain" target="_blank" rel="noreferrer" aria-label="Facebook">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          </a>
          <a href="https://www.tiktok.com/@sacredpain" target="_blank" rel="noreferrer" aria-label="TikTok">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1-2.89-2.89 2.89 2.89 0 0 1 2.89-2.89c.28 0 .54.04.79.1V9.01a6.28 6.28 0 0 0-.79-.05 6.34 6.34 0 0 0-6.34 6.34 6.34 6.34 0 0 0 6.34 6.34 6.34 6.34 0 0 0 6.34-6.34V8.69a8.18 8.18 0 0 0 4.78 1.52V6.79a4.85 4.85 0 0 1-1.02-.1z"/></svg>
          </a>
        </div>
      </div>

      <!-- nav links -->
      <div class="footer-links-col">
        <p class="footer-col-title">Servicios</p>
        <nav>
          {links.services.map(l => <a class="footer-link" href={l.href}>{l.label}</a>)}
          {links.info.map(l => <a class="footer-link" href={l.href}>{l.label}</a>)}
        </nav>
      </div>
      <div class="footer-links-col">
        <p class="footer-col-title">Artistas</p>
        <nav>
          {links.artists.map(l => <a class="footer-link" href={l.href}>{l.label}</a>)}
        </nav>
      </div>

      <!-- contact col -->
      <div class="footer-contact-col">
        <p class="footer-col-title">Contacto</p>
        <a class="footer-phone" href="tel:7875962562">(787) 596-2562</a>
        <address>
          418 Av 65 Infantería<br/>San Juan, PR 00926
        </address>
        <p class="footer-hours">
          <strong>Lun–Sáb</strong> 11 AM – 8 PM<br/>
          <strong>Dom</strong> Cerrado
        </p>
        <a
          class="btn btn-gold"
          style="margin-top:16px;width:100%;justify-content:center;"
          href="/reservar"
        >Reservar cita</a>
      </div>
    </div>

    <hr class="divider" style="margin:32px 0 20px" />

    <!-- bottom bar -->
    <div class="footer-bottom">
      <p class="muted">© {year} Sacred Pain Tattoo · All Rights Reserved.</p>
      <p class="muted">
        <a href="tel:7875962562" style="color:var(--muted)">(787) 596-2562</a>
        &nbsp;·&nbsp; 418 Av 65 Infantería, San Juan, PR
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--dark);
    border-top: 1px solid var(--border);
    padding: 64px 0 32px;
  }
  .footer-grid {
    display: grid;
    gap: 40px;
  }
  @media (min-width: 700px)  { .footer-grid { grid-template-columns: 1fr 1fr; } }
  @media (min-width: 1060px) { .footer-grid { grid-template-columns: 1.6fr 1fr 1fr 1fr; } }

  /* brand */
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    text-decoration: none;
  }
  .footer-logo img {
    width: 52px; height: 52px;
    border-radius: 50%;
    border: 2px solid var(--border-gold);
    object-fit: cover;
  }
  .footer-logo-name {
    font-family: var(--font-display);
    font-size: 20px;
    line-height: 1.1;
    letter-spacing: 1px;
    color: var(--text);
  }
  .footer-tagline {
    font-size: 13px;
    color: var(--muted);
    line-height: 1.7;
    margin-bottom: 20px;
  }
  .footer-socials {
    display: flex;
    gap: 12px;
  }
  .footer-socials a {
    width: 36px; height: 36px;
    border-radius: 8px;
    border: 1px solid var(--border);
    display: grid;
    place-items: center;
    color: var(--muted);
    transition: border-color 0.15s, color 0.15s;
  }
  .footer-socials a:hover {
    border-color: var(--gold);
    color: var(--gold);
    text-decoration: none;
  }

  /* nav cols */
  .footer-col-title {
    font-size: 10px;
    font-weight: 700;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 16px;
  }
  .footer-links-col nav {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .footer-link {
    font-size: 13px;
    color: var(--muted);
    transition: color 0.15s;
  }
  .footer-link:hover { color: var(--text); text-decoration: none; }

  /* contact col */
  .footer-phone {
    display: block;
    font-family: var(--font-display);
    font-size: 26px;
    color: var(--gold-lt);
    letter-spacing: 1px;
    margin-bottom: 10px;
    transition: color 0.15s;
  }
  .footer-phone:hover { color: var(--gold); text-decoration: none; }
  address {
    font-style: normal;
    font-size: 13px;
    color: var(--muted);
    line-height: 1.7;
  }
  .footer-hours {
    font-size: 12px;
    color: var(--muted);
    margin-top: 10px;
    line-height: 1.7;
  }
  .footer-hours strong { color: var(--text); font-weight: 600; }

  /* bottom */
  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    gap: 8px 24px;
    justify-content: space-between;
    align-items: center;
  }
</style>
